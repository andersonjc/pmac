{
  "name": "pmac",
  "version": "1.0.0",
  "type": "module",
  "description": "Project Management as Code (PMaC) - A file-based methodology and toolkit for AI-assisted software development with backlog viewer",
  "keywords": [
    "project-management",
    "ai-assisted-development",
    "typescript",
    "cli",
    "yaml",
    "methodology",
    "svelte",
    "backlog-viewer"
  ],
  "homepage": "https://github.com/andersonjc/pmac#readme",
  "bugs": {
    "url": "https://github.com/andersonjc/pmac/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andersonjc/pmac.git"
  },
  "license": "MIT",
  "author": "John C. Anderson (https://github.com/andersonjc)",
  "main": "tools/pmac.ts",
  "bin": {
    "pmac": "./tools/pmac.ts"
  },
  "scripts": {
    "pmac": "tsx tools/pmac.ts",
    "viewer:dev": "vite --config tools/viewer/vite.config.ts",
    "viewer:build": "vite build --config tools/viewer/vite.config.ts",
    "viewer:preview": "vite preview --config tools/viewer/vite.config.ts",
    "viewer:check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "pnpm test:cli && pnpm test:viewer",
    "test:cli": "vitest --config vitest.config.ts",
    "test:cli:coverage": "vitest --config vitest.config.ts --coverage",
    "test:cli:watch": "vitest --config vitest.config.ts --watch",
    "test:viewer": "cd tools/viewer && vitest",
    "test:viewer:coverage": "cd tools/viewer && vitest --coverage",
    "test:viewer:watch": "cd tools/viewer && vitest --watch",
    "test:coverage": "pnpm test:cli:coverage && pnpm test:viewer:coverage",
    "build": "tsc --noEmit && npm run viewer:build",
    "lint": "eslint 'tools/**/*.ts' 'tools/**/*.js'",
    "lint:viewer": "eslint 'tools/viewer/src/**/*.ts' 'tools/viewer/src/**/*.svelte'",
    "format": "prettier --write 'tools/**/*.ts' 'tools/**/*.js'",
    "format:viewer": "prettier --write 'tools/viewer/src/**/*.{ts,svelte,js}'",
    "format:all": "pnpm format && pnpm format:viewer"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.31.0",
    "eslint-plugin-svelte": "^3.10.1",
    "jsdom": "^26.1.0",
    "lucide-svelte": "^0.400.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "yaml": "^2.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "tools/",
    "templates/",
    "README.md",
    "LICENSE",
    "CLAUDE.md",
    "project-management-as-code.md",
    ".gitignore",
    "tsconfig.json"
  ]
}
