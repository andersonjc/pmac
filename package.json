    "vitest": "^3.2.4",
    "yaml": "^2.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "tools/",
    "templates/",
    "README.md",
    "LICENSE",
    "CLAUDE.md",
    "project-management-as-code.md",
