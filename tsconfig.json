{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["tools/viewer/src/lib/*"],
      "$components/*": ["tools/viewer/src/components/*"]
    }
  },
  "include": [
    "tools/viewer/src/**/*.ts",
    "tools/viewer/src/**/*.svelte"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "tools/pmac.ts"
  ]
}